<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/question_1"
            layout="@layout/radio_group_question" />

        <include
            android:id="@+id/question_2"
            layout="@layout/radio_group_question" />

        <include
            android:id="@+id/question_3"
            layout="@layout/checkbox_question" />

        <include
            android:id="@+id/question_4"
            layout="@layout/edit_text_question" />

        <Button
            android:id="@+id/button_submit"
            style="@style/button_style"
            android:onClick="verifyAnswers"
            android:text="@string/get_out_of_the_forest" />

        <Button
            android:id="@+id/button_restart"
            style="@style/button_style"
            android:onClick="resetQuiz"
            android:text="@string/try_again"
            android:visibility="gone" />
    </LinearLayout>

</ScrollView>
