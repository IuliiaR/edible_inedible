<?xml version="1.0" encoding="utf-8"?>
<com.example.android.edibleorinedible.EditTextQuestion xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="32dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/question"
        style="@style/question_text_style"
        android:text="@string/what_is_the_name_of_this_berry" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/image_for_question" />

    <EditText
        android:id="@+id/answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:hint="@string/enter_your_answer"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorAccent"
        android:textSize="16sp" />
</com.example.android.edibleorinedible.EditTextQuestion>

